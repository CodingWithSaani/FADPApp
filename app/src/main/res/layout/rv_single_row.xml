<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/rv_sr_iv"
        android:src="@drawable/ic_car"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rv_sr_car_brand_tv"
        android:layout_toRightOf="@id/rv_sr_iv"
        android:text="Brand : Toyota"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rv_sr_car_model_tv"
        android:layout_toRightOf="@id/rv_sr_iv"
        android:layout_below="@id/rv_sr_car_brand_tv"
        android:text="Model : 2022"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rv_sr_car_type_tv"
        android:layout_toRightOf="@id/rv_sr_iv"
        android:layout_below="@id/rv_sr_car_model_tv"
        android:text="Type : Auto"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/rv_sr_iv"
        />
</RelativeLayout>